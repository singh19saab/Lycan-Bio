<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LYCAN BIO | <%=title%>
    </title>
    <link rel="icon" href="images/lycan symbol (2).svg" type="image/x-icon">
    <link rel="stylesheet" href="css/nav.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" rel="stylesheet">
    <link rel="stylesheet" href="bootstrap4/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/aos.css">
    <style>
        body {
            background-color: white;
            font-family: 'Inter';
        }
        .fa-facebook-official,
        .fa-linkedin-square,
        .fa-twitter {
            font-size: 50px
        }
    </style>
</head>

<body>
    <%- include('./partials/nav.ejs') %>
        <!--Header-->
        <div class="ly-block ly-hide-small ly-hide-medium ly-hide-large"
            style="height: 200px;background-color: #00b1a9;">
            <div class="ly-center " style="padding-top: 4.5%;">
                <h1 style="color: white;font-size:70px;">Contact Us</h1>
            </div>
        </div>
        <div class="ly-block ly-hide-small ly-hide-medium ly-hide-xlarge"
            style="height: 200px;background-color: #00b1a9;">
            <div class="ly-center " style="padding-top: 6.5%;">
                <h1 style="color: white;font-size:70px;">Contact Us</h1>
            </div>
        </div>
        <div class="ly-block ly-hide-small ly-hide-large ly-hide-xlarge"
            style="height: 200px;background-color: #00b1a9;">
            <div class="ly-center " style="padding-top: 12%;">
                <h1 style="color: white;font-size:60px;">Contact Us</h1>
            </div>
        </div>
        <div class="ly-block ly-hide-medium ly-hide-large ly-hide-xlarge"
            style="height: 150px;background-color: #00b1a9;">
            <div class="ly-center " style="padding-top: 20%;">
                <h1 style="color: white;font-size:50px;">Contact Us</h1>
            </div>
        </div>
        <!--large/medium-->
        <div class="container ly-padding-64 ly-hide-small">
            <div class="row">
                <div class="ly-half" style="padding-left:5%;">
                    <h4>Lybio is headquartered in Bangalore, the technology hub of India.</h4>
                    <hr>
                    <div class="ly-padding-32">
                        <h3 style="color: #06faee;">Email Contact:</h3>
                        <p>siddarth@lybio.in</p>
                    </div>
                    <div class="ly-padding-16">
                        <h3 style="color: #06faee;">Head Office:</h3>
                        <p>IKP Eden, Kormangala,</p>
                        <p>Bengaluru, Karnataka</p>
                        <p>India, 560029 </p>
                        <p>Landmark : Opposite Forum Mall</p>
                        <p>
                        <h5>Phone (M): +91 9742133757</h5>
                        </p>
                    </div>
                </div>
                <div class="ly-half" style="padding-left:5%;">
                    <div class="text-success ly-center ly-xlarge">
                        <%= Insertresult %>
                    </div>
                    <form method="POST" action="/submit" autocomplete="off">
                        <div class="form-group ly-padding-16">
                            <label for="fullname">Full Name:</label>
                            <input type="text" class="form-control" name="fullname" placeholder="Enter Name" id="name"
                                required>
                            <div class="text-danger">
                                <%= user.fullNameError %>
                            </div>
                        </div>
                        <div class="form-group ly-padding-16">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" name="email" placeholder="Enter Email" id="mail"
                                required>
                            <div class="text-danger">
                                <%= user.emailError %>
                            </div>
                        </div>
                        <div class="form-group ly-padding-16">
                            <label for="mobile">Phone:</label>
                            <input type="tel" class="form-control" name="mobile" id="phn" placeholder="Enter Number" required>
                            <div class="text-danger">
                                <%= user.mobileError %>
                            </div>
                        </div>
                        <div class="form-group ly-padding-16">
                            <label for="message">Comments:</label>
                            <input type="txt" class="form-control" name="message" placeholder="Enter message" id="msg"
                                style="height: 100px;">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
        <!--small screen-->
        <div class="ly-container ly-padding-32 ly-hide-medium ly-hide-large ly-hide-xlarge">
            <div class="row">
                <div class="ly-half">
                    <h4 style="padding-left:2%;">Lybio is headquartered in Bangalore, the technology hub of India.</h4>
                    <hr>
                    <div class="ly-padding-32" style="padding-left:4%;padding-right: 2%;">
                        <h3 style="color: #06faee;">Email Contact:</h3>
                        <p style="font-weight: 600;">siddarth@lybio.in</p>
                    </div>
                    <div class="ly-padding-16" style="padding-left:4%;padding-right: 2%;">
                        <h3 style="color: #06faee;">Head Office:</h3>
                        <p>IKP Eden, Kormangala,</p>
                        <p>Bengaluru, Karnataka</p>
                        <p>India, 560029 </p>
                        <p>Landmark : Opposite Forum Mall</p>
                        <p>
                        <h5>Phone (M): +91 9742133757</h5>
                        </p>
                    </div>
                </div>
                <div class="ly-half" style="padding-left:4%;padding-right: 4%;">
                    <div class="text-success ly-center ly-medium">
                        <%= Insertresult %>
                    </div>
                    <form method="POST" action="/submit" autocomplete="off">
                        <div class="form-group ly-padding-16">
                            <label for="fullname">Full Name:</label>
                            <input type="text" class="form-control" name="fullname" placeholder="Enter Name" id="name"
                                required>
                            <div class="text-danger">
                                <%= user.fullNameError %>
                            </div>
                        </div>
                        <div class="form-group ly-padding-16">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" name="email" placeholder="Enter Email" id="mail"
                                required>
                            <div class="text-danger">
                                <%= user.emailError %>
                            </div>
                        </div>
                        <div class="form-group ly-padding-16 ly-hide-medium">
                            <label for="mobile">Phone:</label>
                            <input type="tel" class="form-control" name="mobile" id="phn2" placeholder="Enter Number" required>
                            <div class="text-danger">
                                <%= user.mobileError %>
                            </div>
                        </div>
                        <div class="form-group ly-padding-16">
                            <label for="message">Comments:</label>
                            <input type="txt" class="form-control" name="message" placeholder="Enter message" id="msg"
                                style="height: 100px;">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>

        <!--Google Map-->
        <div class=" ly-padding-64 container" id="SecondGrid">
            <div class="ly-auto ly-center ly-image ly-hide-small ly-hide-medium"
                style="border-bottom:4px solid #06faee!important">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3888.5896954586347!2d77.60768031426237!3d12.934071990880451!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae15599405adb5%3A0x6b6ca5b3791dd536!2sLycan%203D!5e0!3m2!1sen!2sin!4v1593154253688!5m2!1sen!2sin"
